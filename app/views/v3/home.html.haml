:scss
    $touchpad-bg: desaturate(green, 70%);
    $touch-square: lighten($touchpad-bg, 70%);
    #touchpad{
        position: relative;
        height: 100%;
        width: 100%;
        color: white;
        font-family: Avenir, sans-serif;
        font-size: 4em;
        text-align: center;
            
        background: $touchpad-bg;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        #touch-square{
            position: absolute;
            left: 40%;
            top: 40%;
            width: 150px;
            height: 150px;
            background: $touch-square;
        }
    }
    #back-button{
        position: absolute;
        z-index: 100;
        top: 15px;
        left: 15px;
    }
    
